{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".build",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}